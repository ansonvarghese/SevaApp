<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/as"
    tools:context="com.zibbix.medpharmapp.sevaapp.HelpdeskActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="71dp"
        android:text="Police"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/textView21"
        android:onClick="call"
        app:srcCompat="@drawable/call" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="31dp"
        android:text="Highway Alert "
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignTop="@+id/textView21"
        app:srcCompat="@drawable/call" />

    <TextView
        android:id="@+id/textView210"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView21"
        android:layout_below="@+id/imageView31"
        android:layout_marginTop="21dp"
        android:text="Crime Stopper"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView310"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignStart="@+id/imageView31"
        android:layout_alignTop="@+id/textView210"
        app:srcCompat="@drawable/call" />

    <TextView
        android:id="@+id/textView2100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView210"
        android:layout_below="@+id/imageView310"
        android:layout_marginTop="22dp"
        android:text="Police High Way"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3100"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignStart="@+id/imageView310"
        android:layout_alignTop="@+id/textView2100"
        app:srcCompat="@drawable/call" />

</RelativeLayout>
